# === ENHANCED FLASK QUIZ APPLICATION CONFIGURATION ===
# Copy this file to .env and customize for your environment
# Generate secure keys with: flask generate-secrets

# === CORE APPLICATION SETTINGS ===
FLASK_SECRET_KEY=your-super-secure-64-character-secret-key-generate-with-flask-command
WTF_CSRF_SECRET_KEY=your-csrf-protection-secret-key-also-64-characters-long
FLASK_ENV=development
FLASK_DEBUG=False
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# === SSL/HTTPS CONFIGURATION ===
SSL_ENABLED=False
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# === DATABASE ===
# DATABASE_URL=sqlite:///absolute/path/to/database.db
# Leave empty to use default auto-generated path
DATABASE_URL=

# === ENHANCED SECURITY SETTINGS ===
# Rate limiting to prevent abuse
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_STORAGE_URL=memory://
# For production, use Redis: redis://localhost:6379/0

# === SESSION SECURITY (Enhanced) ===
SESSION_COOKIE_SECURE=False  # Set to True for HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=3600  # 1 hour

# === INPUT VALIDATION ===
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
MAX_FORM_MEMORY_SIZE=2097152  # 2MB max form data

# === CORS CONFIGURATION ===
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/quiz_app.log

# === QUIZ APPLICATION LIMITS ===
MAX_PLAYERS_PER_GAME=50
MAX_QUESTIONS_PER_QUIZ=100
PIN_EXPIRY_MINUTES=60

# === CLASSROOM SETUP (Uncomment for WLAN access) ===
# FLASK_HOST=0.0.0.0
# CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000,http://YOUR_IP:5000
# FLASK_DEBUG=False

# === PRODUCTION DEPLOYMENT SETTINGS ===
# Uncomment and configure for production use:

# FLASK_ENV=production
# FLASK_DEBUG=False
# SSL_ENABLED=True
# SESSION_COOKIE_SECURE=True
# RATELIMIT_DEFAULT=50 per hour
# RATELIMIT_STORAGE_URL=redis://localhost:6379/0
# LOG_LEVEL=WARNING

# === MONITORING & ALERTING ===
# Sentry for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# === ADDITIONAL SECURITY HEADERS ===
# Custom security policy (advanced)
# CUSTOM_CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'

# === BACKUP & MAINTENANCE ===
# Database backup settings
# BACKUP_ENABLED=True
# BACKUP_INTERVAL=86400  # 24 hours in seconds

# === PERFORMANCE TUNING ===
# Database connection pool
# DB_POOL_SIZE=10
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600
